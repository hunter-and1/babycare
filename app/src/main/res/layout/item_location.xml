<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:background="#fff"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/listview_image"
        android:layout_width="60dp"
        android:layout_weight="0"
        android:padding="10dp"
        app:srcCompat="@drawable/syrup"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.wicoding.injaz.babycare.MyTextView
            android:id="@+id/listview_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left|center"
            android:text="Polyclinique de la CNSS"
            android:textStyle="normal|bold"
            android:textColor="#000" />
        <com.wicoding.injaz.babycare.MyTextView
            android:id="@+id/listview_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left|center"
            android:text="Polyclinique de la CNSS"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_place_black_24dp"
        android:id="@+id/imageView_gps"
        android:layout_weight="0"
        android:padding="10dp" />
</LinearLayout>