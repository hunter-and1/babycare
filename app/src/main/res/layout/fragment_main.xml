<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wicoding.injaz.babycare.FragmentMain"
    android:background="@drawable/bg_app">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="120dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:src="@drawable/placeholder_baby"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/colorPrimary"
            android:layout_height="170dp" />

        <com.wicoding.injaz.babycare.MyTextView
            android:text="Nawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="34sp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/calendar"

                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:layout_width="50dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Date of birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#000"
                        android:gravity="bottom" />

                    <com.wicoding.injaz.babycare.MyTextView
                        android:text="02/10/2016"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/screenP1"
                        android:id="@+id/profile_dob" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/calendar"

                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:layout_width="50dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#000"
                        android:gravity="bottom" />

                    <com.wicoding.injaz.babycare.MyTextView
                        android:text="0 Ans / 2 Mois / 56 Jours"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/screenP1"
                        android:id="@+id/profile_age" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
